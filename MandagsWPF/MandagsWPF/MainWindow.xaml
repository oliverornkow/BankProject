        <StackPanel Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Left">
            <Button Content="Opret Kunde" Margin="5,70,0,0" Click="OpretKunde" Background="#FF54BC1C" />
            <Button Content="Slet Kunde"  Margin="5,10,0,0"  Click="SletKunde"  Background="#FFD30F0F"/>
